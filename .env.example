# Mushqila Travel Management System - Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# SECURITY WARNING: Generate a strong secret key for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-minimum-50-characters-long-and-random

# SECURITY WARNING: Set to False in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database engine: sqlite, postgresql, mysql
DB_ENGINE=sqlite

# PostgreSQL Settings (for production)
DB_NAME=mushqila_db
DB_USER=mushqila_user
DB_PASSWORD=your-strong-database-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# GALILEO GDS API SETTINGS
# =============================================================================

# Travelport Galileo Credentials
GALILEO_PCC=YOUR_PCC_CODE
GALILEO_USERNAME=YOUR_API_USERNAME
GALILEO_PASSWORD=YOUR_API_PASSWORD
GALILEO_TARGET_BRANCH=YOUR_TARGET_BRANCH
GALILEO_PROVIDER_CODE=1G

# Galileo API Endpoints
# Production
GALILEO_AIR_ENDPOINT=https://apac.universal-api.travelport.com/B2BGateway/connect/uAPI/AirService
GALILEO_UNIVERSAL_ENDPOINT=https://apac.universal-api.travelport.com/B2BGateway/connect/uAPI/UniversalRecordService
GALILEO_UTIL_ENDPOINT=https://apac.universal-api.travelport.com/B2BGateway/connect/uAPI/UtilService

# Test Environment (for development)
# GALILEO_AIR_ENDPOINT=https://apac.universal-api.pp.travelport.com/B2BGateway/connect/uAPI/AirService
# GALILEO_UNIVERSAL_ENDPOINT=https://apac.universal-api.pp.travelport.com/B2BGateway/connect/uAPI/UniversalRecordService

# WSDL URLs
GALILEO_AIR_WSDL=https://support.travelport.com/webhelp/uapi/uAPI_AirService.wsdl
GALILEO_UNIVERSAL_WSDL=https://support.travelport.com/webhelp/uapi/uAPI_UniversalRecordService.wsdl

# Optional Settings
GALILEO_TIMEOUT=30
GALILEO_DEBUG=True

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email Backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Email Addresses
DEFAULT_FROM_EMAIL=noreply@mushqila.com
SERVER_EMAIL=server@mushqila.com
ADMIN_EMAIL=admin@mushqila.com

# =============================================================================
# REDIS CACHE SETTINGS (Optional - for production)
# =============================================================================

REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# CELERY SETTINGS (Optional - for async tasks)
# =============================================================================

USE_CELERY=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# AWS S3 SETTINGS (Optional - for media storage)
# =============================================================================

USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=mushqila-media
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# SENTRY ERROR TRACKING (Optional - for production)
# =============================================================================

USE_SENTRY=False
SENTRY_DSN=your-sentry-dsn-url

# =============================================================================
# CORS SETTINGS (Optional - for separate frontend)
# =============================================================================

USE_CORS=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# PAYMENT GATEWAY SETTINGS
# =============================================================================

# Payment Gateway Selection (stripe, paypal, hyperpay, etc.)
PAYMENT_GATEWAY=stripe

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_public_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# HyperPay (for Middle East)
HYPERPAY_ENTITY_ID=your-entity-id
HYPERPAY_ACCESS_TOKEN=your-access-token
HYPERPAY_TEST_MODE=True

# =============================================================================
# SMS GATEWAY SETTINGS (Optional)
# =============================================================================

SMS_GATEWAY=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# SOCIAL AUTH SETTINGS (Optional)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================

# Company Information
COMPANY_NAME=Mushqila Travel
COMPANY_EMAIL=info@mushqila.com
COMPANY_PHONE=+966-XXX-XXXX
COMPANY_ADDRESS=Your Company Address

# Default Currency
DEFAULT_CURRENCY=SAR

# Default Language
DEFAULT_LANGUAGE=en

# Timezone
TIME_ZONE=Asia/Riyadh

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_B2C=True
ENABLE_B2B=True
ENABLE_LOYALTY=True
ENABLE_REFERRALS=True
ENABLE_REVIEWS=True
ENABLE_SOCIAL=True

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limits (requests per minute)
API_RATE_LIMIT=60
SEARCH_RATE_LIMIT=30
BOOKING_RATE_LIMIT=10

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=5

# Allowed file extensions
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable File Logging
ENABLE_FILE_LOGGING=True

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Facebook Pixel
FACEBOOK_PIXEL_ID=your-pixel-id

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Django Debug Toolbar
ENABLE_DEBUG_TOOLBAR=False

# Django Extensions
ENABLE_DJANGO_EXTENSIONS=False

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env file to version control
# 2. Use strong, random passwords for all credentials
# 3. Rotate API keys and secrets regularly
# 4. Use different credentials for development and production
# 5. Enable 2FA for all critical services
# 6. Keep this file secure and backed up
# 7. Review and update settings before production deployment

# =============================================================================
# QUICK START
# =============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Update SECRET_KEY with a strong random key
# 3. Set DEBUG=False for production
# 4. Configure database credentials
# 5. Add Galileo API credentials
# 6. Configure email settings
# 7. Set up payment gateway
# 8. Review all settings
# 9. Test in staging environment
# 10. Deploy to production

